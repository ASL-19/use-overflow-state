{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "incremental": true,
    "module": "esnext",
    "strict": true,
    "target": "es2021"
  },
  "include": [
    "*.js",
    "*.mjs",
    "*.ts",
    "src/**/*.ts*"
  ]
}
